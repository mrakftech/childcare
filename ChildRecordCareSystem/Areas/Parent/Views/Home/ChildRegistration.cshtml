@model ChildRecordCareSystem.Models.ChildVM

<style>
    .file-upload {
        position: relative;
        overflow: hidden;
        display: inline-block;
        width: 100%;
        border-radius: 10px;
        border-color: #9fa2a8;
        background-color: none;
    }

        .file-upload input[type="file"] {
            position: absolute;
            opacity: 0;
            right: 0;
            top: 0;
            cursor: pointer;
        }

    .file-upload-box {
        border: 2px dashed #5f6163;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        color: #007bff;
    }

        .file-upload-box:hover {
            background-color: #f8f9fa;
        }

    .btn-primary {
        border-radius: 15px;
    }

    .inputField input,
    select {
        border-radius: 10px;
    }
</style>

<!-- Morning Section -->
<div class="morning-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <form asp-action="Create" asp-controller="Home" asp-area="Parent" method="post" enctype="multipart/form-data">
                    <div class="mb-3 inputField text-center">
                        <div class="container pb-1">
                            <div class="position-relative d-inline-block text-center">
                                <img class="rounded-circle outputImage border border-secondary" src="~/assets/img/profileUser.png" alt="User Image" style="width: 120px; height: 120px; object-fit: cover;">
                                <input asp-for="ChildProfilePath" type="file" id="fileInput" class="d-none">
                                <label for="fileInput" class="position-absolute bottom-0 end-0 d-flex align-items-center justify-content-center bg-white rounded-circle" style="width: 1.5rem; height: 1.5rem; transform: translate(-5px, -6px);">
                                    <i class="bi bi-pencil-square text-black" style="font-size: 1rem;"></i>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 inputField">
                        <input asp-for="FullName" class="form-control" placeholder="Full Name">
                    </div>

                    <div class="mb-3 inputField">
                        <input asp-for="DOB" type="date" class="form-control" placeholder="DD/MM/YY">
                    </div>

                    <div class="mb-3 inputField">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    </div>

                    <div class="mb-3 inputField">
                        <select asp-for="Gender" class="form-select">
                            <option value="">-- Sex --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="mb-3 inputField">
                        <input asp-for="City" class="form-control" placeholder="City">
                    </div>

                    <div class="mb-3 inputField">
                        <input asp-for="Country" class="form-control" placeholder="Country">
                    </div>

                    <div class="mb-3 inputField">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number">
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="file-upload">
                                <div class="file-upload-box text-center border border-secondary p-4" id="fileUploadBox1">
                                    <i class="fas fa-cloud-upload-alt fa-3x"></i>
                                    <p>Upload document</p>
                                </div>
                                <input type="file" asp-for="Doument1" id="fileInput1" class="form-control-file d-none">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="file-upload">
                                <div class="file-upload-box text-center border border-secondary p-4" id="fileUploadBox2">
                                    <i class="fas fa-cloud-upload-alt fa-3x"></i>
                                    <p>Upload document</p>
                                </div>
                                <input type="file" asp-for="Doument2" id="fileInput2" class="form-control-file d-none">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="file-upload">
                                <div class="file-upload-box text-center border border-secondary p-4" id="fileUploadBox3">
                                    <i class="fas fa-cloud-upload-alt fa-3x"></i>
                                    <p>Upload document</p>
                                </div>
                                <input type="file" asp-for="Doument3" id="fileInput3" class="form-control-file d-none">
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <button class="btn btn-primary col-12 btn-block" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('fileInput').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.querySelector('.outputImage').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });

    document.getElementById('fileUploadBox1').addEventListener('click', function () {
        document.getElementById('fileInput1').click();
    });

    document.getElementById('fileUploadBox2').addEventListener('click', function () {
        document.getElementById('fileInput2').click();
    });

    document.getElementById('fileUploadBox3').addEventListener('click', function () {
        document.getElementById('fileInput3').click();
    });

    document.getElementById('fileInput1').addEventListener('change', function () {
        var file = this.files[0];
        if (file) {
            var fileUploadBox1 = document.getElementById('fileUploadBox1');
            fileUploadBox1.innerHTML = '<p>' + file.name + '</p>';
            fileUploadBox1.classList.add('file-selected');
        }
    });

    document.getElementById('fileInput2').addEventListener('change', function () {
        var file = this.files[0];
        if (file) {
            var fileUploadBox2 = document.getElementById('fileUploadBox2');
            fileUploadBox2.innerHTML = '<p>' + file.name + '</p>';
            fileUploadBox2.classList.add('file-selected');
        }
    });

    document.getElementById('fileInput3').addEventListener('change', function () {
        var file = this.files[0];
        if (file) {
            var fileUploadBox3 = document.getElementById('fileUploadBox3');
            fileUploadBox3.innerHTML = '<p>' + file.name + '</p>';
            fileUploadBox3.classList.add('file-selected');
        }
    });
</script>
